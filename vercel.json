{
  "buildCommand": "npm install --prefix api && npm install --prefix client && rm -rf client/.expo client/dist && npx --prefix client expo export --platform web --clear",
  "outputDirectory": "client/dist",
  "framework": null,
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api"
    },
    {
      "source": "/health",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
